<!DOCTYPE html>
<html>
  <%- include('header') -%>  
  <body>

    <div class="content">
      <h2><%- title %> </h2>

      <% nations.forEach(nation => { %> 
        <% nationArray = nation.split('') %> 
        <% let firstLetter = nationArray[0].toUpperCase() %> 
        <% nationArray.shift()%>
        <% if (nationArray.includes('-')) { %> 
          <% const index = nationArray.indexOf('-') %>
          <% nationArray[index] = ' ' %>
          <% if (nationArray[index+1] != undefined) { %> 
            <% nationArray[index+1] = nationArray[index+1].toUpperCase() %> 
          <% } %>  
        <% } %> 
        <% const formattedChar = `${firstLetter}${nationArray.join('')}` %> 
        <a href="<%- `/genshin-library/nations/${nation}` %>"><p><%- formattedChar %>  </p></a>
      <% }); %> 
      
    </div>

    <script src="" async defer></script>
  </body>
</html>